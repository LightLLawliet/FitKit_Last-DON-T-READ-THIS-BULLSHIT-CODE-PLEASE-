<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="appDrawerItem">
        <item name="android:layout_marginTop">@dimen/drawer_item_vertical_margin</item>
        <item name="android:layout_width">@dimen/zero_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/nav_item_background</item>
        <item name="android:fontFamily">@font/faustina_regular</item>
        <item name="android:lineHeight">@dimen/line_height_large</item>
        <item name="android:paddingVertical">@dimen/drawer_item_vertical_padding</item>
        <item name="android:paddingStart">@dimen/drawer_item_padding_start</item>
        <item name="drawableEndCompat">@drawable/next</item>
        <item name="android:paddingEnd">@dimen/drawer_item_padding_end</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text_size_pre_large</item>
    </style>

    <style name="mainToolbar">
        <item name="android:layout_width">@dimen/zero_width</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ImageView.Corner" parent="">
        <item name="cornerSizeTopRight">5dp</item>
        <item name="cornerSizeTopLeft">5dp</item>
        <item name="cornerSizeBottomLeft">5dp</item>
        <item name="cornerSizeBottomRight">5dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="guidelineLeft">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="guidelineRight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="layoutHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero_width</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="headerIcon">
        <item name="android:layout_width">@dimen/header_icon_size</item>
        <item name="android:layout_height">@dimen/header_icon_size</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="headerUsername">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/faustina_regular</item>
        <item name="android:paddingTop">@dimen/drawer_item_vertical_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="loginText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/faustina_regular</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="loginEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/fab_margin</item>
        <item name="android:fontFamily">@font/faustina_regular</item>
        <item name="android:gravity">bottom</item>
        <item name="android:lineHeight">@dimen/line_height_large</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="loginButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/fab_margin</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:fontFamily">@font/faustina_regular</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="logoFit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/faustina_regular</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:lineHeight">76sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">60sp</item>
    </style>

    <style name="logoKit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/faustina_regular</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">60sp</item>
    </style>

    <style name="loginAction">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_weight">60</item>
        <item name="android:fontFamily">@font/faustina_regular</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">@dimen/text_size_pre_medium</item>
    </style>

    <style name="homeTitle">
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/faustina_regular</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_pre_large</item>
    </style>

    <style name="followersText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineHeight">@dimen/line_height_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_pre_medium</item>
    </style>
</resources>